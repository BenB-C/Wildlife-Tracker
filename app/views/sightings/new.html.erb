<h1>Add a new sighting:</h1>

<%= form_for [@animal, @sighting] do |f| %>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <%= f.label :lat %>
  <%= f.text_field :lat %>
  <%= f.label :long %>
  <%= f.text_field :long %>
  <%= f.label :region_id %>
  <%= f.collection_select(:region_id, Region.all, :id, :place) %>
  <p><%= f.submit %></p>
<% end %>
